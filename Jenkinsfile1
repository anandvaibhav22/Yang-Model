pipeline{
 agent any
 triggers{ cron('H/15 * * * *') }
    stages{
       stage("build"){
             steps{
                echo 'build stage'
          }
    }
    stage("test"){
             steps{
             		echo 'Test stage'
                  }
        }

    stage("deploy"){
             steps{
             	echo 'Deploy'
              sh 'python3 hello.py'
           }
    }

    }

}
