pipeline{
 agent any
 parameters {
        string(name: 'a', description: 'How should I greet the world?')
        string(name: 'b', description: 'How should I greet the world?')
    }
    stages{
       stage("build"){
             steps{
                echo 'build stage'
          }
    }
    stage("test"){
             steps{
             		echo 'Test stage'
                  }
        }

    stage("deploy"){
             steps{
             	echo 'Deploy'
              sh 'python3 hello.py ${params.a} ${params.b}'
           }
    }

    }
   
}
