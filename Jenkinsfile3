pipeline{
 agent any
  parameters {
  string(name: 'a', defaultValue: '2', description: 'a value')
  string(name: 'b', defaultValue: '3', description: 'b value')
  }
    stages{
       stage("build"){
             steps{
                echo 'build stage'
          }
    }
    stage("test"){
             steps{
             		echo 'Test stage'
                  }
        }

    stage("deploy"){
             steps{
             	echo 'Deploy'
              sh 'python3 hello.py ${params.a} ${params.b}'
           }
    }

    }
    post {
        always {
            emailext body: 'A Test EMail', recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']], subject: 'Test'
        }
    }
}
