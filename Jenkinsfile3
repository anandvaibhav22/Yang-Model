pipeline{
 agent any
 parameters{
 string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
 }
    stages{
       stage("build"){
             steps{
                echo 'build stage ${params.greeting}'
          }
    }
    stage("test"){
             steps{
             		echo 'Test stage'
                  }
        }

    stage("deploy"){
             steps{
             	echo 'Deploy'
              sh 'python3 hello.py ${a} ${b}'
           }
    }

    }
   
}
